{{ component "layout" . }}
{{ component "layout_user" . }}

{{ component "block" (props .
    "Icon" "user"
    "Name" (printf "changing %s's password" .SelectedUser.Name)
) }}
    <form class="hidden" id="form-password" action="{{ printf "/admin/change_password_do?user=%s" .SelectedUser.Name | path }}" method="post"></form>
    <input form="form-password" type="password" id="password_one" name="password_one" placeholder="new password">
    <input form="form-password" type="password" id="password_two" name="password_two" placeholder="verify new password">
    <input form="form-password" type="submit" value="change">
{{ end }}

{{ end }}
{{ end }}
